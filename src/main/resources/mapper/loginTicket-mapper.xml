<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dgut.orderfoodsystem.mapper.LoginTicketMapper">
    <sql id="fields">
        id, user_id, ticket, status, expired, type
    </sql>
    
    <insert id="addLoginTicket" parameterType="LoginTicket">
        insert into
        login_ticket (<include refid="fields"></include>)
        values (#{id}, #{userId}, #{ticket}, #{status}, #{expired}, #{type})
    </insert>

    <select id="selectLoginTicketByTicket" parameterType="String" resultType="LoginTicket">
        select * from login_ticket where ticket = #{ticket}
    </select>

    <update id="updateLoginTicket">
        update login_ticket set status = #{param2} where ticket=#{param1}
    </update>



</mapper>