<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dgut.orderfoodsystem.mapper.MenuMapper">
    <sql id="fields">
        id,store_id, menu_name, description, create_time
    </sql>

    <insert id="insertMenu" parameterType="Menu">
        insert into menu(<include refid="fields"></include>)
        values (#{id}, #{storeId}, #{menuName}, #{description}, #{createTime})
    </insert>

    <delete id="deleteMenu" parameterType="String">
        delete from menu where id = #{id}
    </delete>

    <select id="selectMenusByStoreId" parameterType="String" resultType="Menu">
        select * from menu where  store_id = #{storeId}
    </select>

    <update id="updateMenu" parameterType="Menu">
        update menu set menu_name = #{menuName}, description=#{description} where id = #{id}
    </update>

    <select id="selectMenuById" parameterType="String" resultType="Menu">
        select * from menu where id = #{id}
    </select>


</mapper>