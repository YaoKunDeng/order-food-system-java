<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dgut.orderfoodsystem.mapper.WxUserMapper">
    <sql id="fields">
        open_id, nickname, avatar_url, gender, province, city, country, language, create_time, update_time
    </sql>

    <insert id="addWxUser" parameterType="WxUser">
        insert into
        wx_user(<include refid="fields"></include> )
        values (#{openId}, #{nickname}, #{avatarUrl}, #{gender}, #{province}, #{city}, #{country}, #{language}, #{createTime}, #{updateTime})
    </insert>

    <select id="selectWxUserByOpenId" parameterType="String" resultType="WxUser">
        select * from wx_user where open_id = #{openId}
    </select>

    <select id="selectAllWxUser" resultType="WxUser">
        select * from wx_user
    </select>

    <select id="delWxUser" parameterType="String">
        delete from wx_user where open_id = #{openId}
    </select>


</mapper>